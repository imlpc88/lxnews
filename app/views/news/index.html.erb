<h1>Listing news</h1>

<table>
  <thead>
    <tr>
      <th>Flag</th>
      <th>Img</th>
      <th>Link</th>
      <th>Maintext</th>
      <th>Resid</th>
      <th>Secsrca</th>
      <th>Sumfrom</th>
      <th>Summary</th>
      <th>Title</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.flag %></td>
        <td><%= news.img %></td>
        <td><%= news.link %></td>
        <td><%= news.mainText %></td>
        <td><%= news.resID %></td>
        <td><%= news.secSrcA %></td>
        <td><%= news.sumFrom %></td>
        <td><%= news.summary %></td>
        <td><%= news.title %></td>
        <td><%= news.type %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

